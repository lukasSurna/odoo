<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

         <record id="document_management_tree_view" model="ir.ui.view">
            <field name="name">document.management.tree</field>
            <field name="model">document.management.document</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="company"/>
                    <field name="creator_user"/>
                    <field name="responsible_employees"/>
                </tree>
            </field>
         </record>

        <record id="document_management_form_view" model="ir.ui.view">
            <field name="name">document.management.form</field>
            <field name="model">document.management.document</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <group>
                                <field name="company"/>
                                <field name="creator_user"/>
                            </group>
                            <group>
                                <field name="responsible_employees"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_documents" model="ir.actions.act_window">
            <field name="name">Document</field>
            <field name="res_model">document.management.document</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="document_management_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add document
                </p>
            </field>
        </record>
    </data>
</odoo>